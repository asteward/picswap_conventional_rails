<!DOCTYPE html>
<html>
<head>
  <title>Picswap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <%= yield %>
  </div>
  <hr>
  <% if current_user %>
    Logged in as <%= current_user.username %>.
    <%= link_to "Log Out", logout_path("current"), method: "get", class:"btn btn-danger" %>
    <%= link_to "#{current_user.username}'s Photos", user_photos_path(current_user), method: "get", class:"btn btn-info" %>
  <% else %>
    <%= link_to "Sign Up", signup_path, class:"btn btn-info" %>
    <%= link_to "Log in", login_path, class:"btn btn-success" %>
  <% end %>
</body>
</html>
